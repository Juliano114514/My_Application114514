<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/play_album_pic"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_marginTop="32dp"
    android:src="@mipmap/ic_launcher"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/play_title" />

  <ImageView
    android:id="@+id/play_mode"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginStart="32dp"
    app:layout_constraintBottom_toBottomOf="@+id/play_last_switch"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/play_last_switch"
    app:layout_constraintVertical_bias="0.0"
    app:srcCompat="@drawable/outline_playlist_play_24" />

  <ImageView
  android:id="@+id/play_pause"
  android:layout_width="40dp"
  android:layout_height="40dp"
  android:layout_marginStart="40dp"
  app:layout_constraintBottom_toBottomOf="@+id/play_next_switch"
  app:layout_constraintStart_toEndOf="@+id/play_last_switch"
  app:layout_constraintTop_toTopOf="@+id/play_next_switch"
  app:layout_constraintVertical_bias="0.0"
  app:srcCompat="@drawable/baseline_pause_24" />

  <ImageView
    android:id="@+id/play_stop_switch"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="40dp"
    android:layout_marginTop="32dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/play_next_switch"
    app:layout_constraintTop_toBottomOf="@+id/play_proc_bar"
    app:srcCompat="@drawable/baseline_stop_24" />

  <ImageView
  android:id="@+id/play_last_switch"
  android:layout_width="40dp"
  android:layout_height="40dp"
  android:layout_marginStart="40dp"
  app:layout_constraintBottom_toBottomOf="@+id/play_pause"
  app:layout_constraintStart_toEndOf="@+id/play_mode"
  app:layout_constraintTop_toTopOf="@+id/play_pause"
  app:layout_constraintVertical_bias="0.0"
  app:srcCompat="@drawable/baseline_skip_previous_24" />

  <ImageView
  android:id="@+id/play_next_switch"
  android:layout_width="40dp"
  android:layout_height="40dp"
  android:layout_marginStart="40dp"
  app:layout_constraintBottom_toBottomOf="@+id/play_stop_switch"
  app:layout_constraintStart_toEndOf="@+id/play_pause"
  app:layout_constraintTop_toTopOf="@+id/play_stop_switch"
  app:layout_constraintVertical_bias="0.0"
  app:srcCompat="@drawable/baseline_skip_next_24" />

  <SeekBar
    android:id="@+id/play_proc_bar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="24dp"
    android:progress="50"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/play_cur_time" />

  <TextView
    android:id="@+id/play_cur_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="45dp"
    android:layout_marginTop="32dp"
    android:text="00:00"
    android:textSize="20sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/play_album_pic" />

  <TextView
  android:id="@+id/play_total_time"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginEnd="45dp"
  android:text="114:514"
  android:textSize="20sp"
  app:layout_constraintBottom_toBottomOf="@+id/play_cur_time"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintTop_toTopOf="@+id/play_cur_time" />

  <TextView
    android:id="@+id/play_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"
    android:text="歌曲标题"
    android:textSize="25sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>